import os


def inputting():
    names = [ "Андриянинкова Софья Павловна", "Афонин Юрий Олегович","Бахарева Олеся Васильевна","Берлимбле Владислав Артурович",\
            "Библова Юлия Вадимовна","Воробьев Вячеслав Сергеевич","Воронина Полина Васильевна","Второва Екатерина Алексеевна",\
              "Годкова Любава Валерьевна","Гонов Максим Андреевич","Дунаевский Михаил Александрович"]
    hours = [34,56,67,56,8,34,56,7,34,22,54]
    print("Введите вашу фамилию имя и отчество")
    name=''
    while name not in names:
        name = str(input())
        if name not in names:
            print("неверное имя")
    print("Здравствуйте ",name," введите количество часов,отработанное вами")
    index = 0
    for i in range(len(names)):
        if names[i] == name:
            index = i
    hour = int(input())
    hours[index] = hour
    print("Спасибо! Данные приняты")


def order():
    print("Введите товар для заказа: ")
    prod = str(input())
    print("Введите количество: ")
    amount = int(input())
    print("Введите дату: ")
    date = str(input())
    print("Ваш заказ на ",prod," в количестве ",amount," будет досавлен ", date)


def change():
    names = ["Андриянинкова Софья Павловна", "Афонин Юрий Олегович", "Бахарева Олеся Васильевна",
             "Берлимбле Владислав Артурович", \
             "Библова Юлия Вадимовна", "Воробьев Вячеслав Сергеевич", "Воронина Полина Васильевна",
             "Второва Екатерина Алексеевна", \
             "Годкова Любава Валерьевна", "Гонов Максим Андреевич", "Дунаевский Михаил Александрович"]
    payments = [1,2,3,2,3,1,2,1,3,1,1]
    print("Введите вашу фамилию имя и отчество")
    name = ''
    while name not in names:
        name = str(input())
        if name not in names:
            print("неверное имя")
    category = ''
    index = 0
    for i in range(len(names)):
        if names[i] == name:
            index = i
    print("Выберите категорию для редактирования: адрес, ФИО, Способ выплаты")
    category = str(input())
    if category=="ФИО":
        print("Введите ФИО")
        new_name = str(input())
        for i in names:
            if i == name:
                i = new_name
    if category == "адрес":
        print("введите индекс адреса")
        address = str(input())
    if category == "Способ выплаты":
        print('Выберите способ:')
        print("1 = на банковскую карту")
        print("2 = на руки")
        print("3 = чек на почту")
        payment = int(input())
        if payment==1:
            payments[index]=1
            print("Теперь вы получаете заработную плату на банковскую карту")
        elif payment == 2:
            payments[index] = 2
            print("Теперь вы получаете заработную плату на руки")
        elif payment == 3:
            payments[index] = 3
            print("Теперь вы получаете заработную плату чеком на почту")
        else:
            print("error")


def document():
    print("Выберите файл на компьютере")
    folder = str(input())
    for filename in os.listdir(folder):
        print(filename)


def offer():
    names = ["Андриянинкова Софья Павловна", "Афонин Юрий Олегович", "Бахарева Олеся Васильевна",
             "Берлимбле Владислав Артурович", \
             "Библова Юлия Вадимовна", "Воробьев Вячеслав Сергеевич", "Воронина Полина Васильевна",
             "Второва Екатерина Алексеевна", \
             "Годкова Любава Валерьевна", "Гонов Максим Андреевич", "Дунаевский Михаил Александрович"]
    hours = [34, 56, 67, 56, 8, 34, 56, 7, 34, 22, 54]
    print("Введите вашу фамилию имя и отчество")
    name = ''
    while name not in names:
        name = str(input())
        if name not in names:
            print("неверное имя")
    index = 0
    for i in range(len(names)):
        if names[i] == name:
            index = i
    print("Ваша зарплата будет составлять", hours[index]*300)


command = ''
print("Добро пожаловать в систему!")
while command != "выход":
    print("Выберите функцию системы")
    print("Напиишишите 'ввод' - Для ввода отработанного времени ")
    print("заказ - для ввода заказа на поставку")
    print("редактирование - для реактирования параметров")
    print("запрос - запрос любой информации")
    print("отчет - для формирования отчета")
    print("выход - для выхода")
    command = str(input())
    if command == 'ввод':
        inputting()
    elif command == 'заказ':
        order()
    elif command == 'редактирование':
        change()
    elif command == 'запрос':
        offer()
    elif command == 'отчет':
        document()
    elif command == 'выход':
        break
    else:
        print("Такой комманды не существует! Пвоторите ввод")
print("Спасибо, хорошего дня!")
